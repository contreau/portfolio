---
const { title, description } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import Portfolio from "../components/Portfolio.astro";
const currentPath = Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      property="og:image"
      content="https://conorkelley.me/og-img-portfolio-min.jpg"
    />
    <meta property="og:type" content="website" />
    <title>Conor Kelley • {title}</title>
    <meta name="title" content=`Conor Kelley • ${title}` />
    <meta property="og:title" content=`Conor Kelley • ${title}` />
    <meta name="description" content={description} />
    <meta property="og:description" content={description} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <ViewTransitions fallback="animate" />
    <slot name="metadata" />
  </head>
  <body>
    <header>
      <div>
        <h1 class="title-name">
          <span style="color: var(--primary)">Conor</span>Kelley
        </h1>
        <span>Web Developer</span>
      </div>
      <nav>
        <ul>
          <li>
            <a
              class={currentPath === "/" ? "page-active" : "site-page"}
              href="/">Development</a
            >
          </li>
          <li>
            <a
              class={currentPath === "/visuals" ? "page-active" : "site-page"}
              href="visuals">Visuals</a
            >
          </li>
          <li>
            <a href="https://github.com/contreau" target="_blank">GitHub</a>
          </li>
          <li><a href="resume.pdf" target="_blank">CV</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <style lang="scss" is:global>
      :root {
        --text: #3a3a3a;
        --background: #c6c6c6;
        --primary: #017b69;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        font-size: 112.5%; /*18px*/
        width: 100vw;
      }

      html,
      body {
        margin: 0;
        padding: 0;
      }

      img {
        max-width: 100%;
        display: block;
      }

      body {
        font-weight: 400;
        line-height: 1.75;
        background-color: var(--background);
        color: var(--text);
        font-family: system-ui;
        max-width: 1500px;
        margin-top: 1.3rem;
        padding: 0 3em;
      }

      a {
        color: var(--primary);
        position: relative;
        text-decoration: none;

        &.site-page {
          color: var(--text);
          text-decoration: none;
        }
      }

      a.page-active {
        color: var(--text);
        text-decoration: none;

        &::before {
          content: "";
          position: absolute;
          background-color: var(--primary);
          bottom: -4px;
          min-height: 3px;
          width: 100%;
        }
      }

      header {
        display: flex;
        align-items: center;
        justify-content: space-between;

        h1 {
          margin-top: 0;
          margin-bottom: 0;
        }

        span:not(h1 > span) {
          color: #535353;
          font-weight: 550;
          font-size: 1.05rem;
          padding-left: 0.15em;
          font-style: italic;
        }

        nav {
          ul {
            list-style-type: none;
            padding-left: 0;
            margin: 0;

            li {
              display: inline;
              font-weight: 550;
              font-size: 1.125rem;
            }

            li + li {
              margin-left: 3rem;
            }
          }
        }
      }

      // Font Configurations ** //

      p {
        font-size: 1.125rem;
      }

      h1,
      h2 {
        font-family: system-ui;
        font-weight: 600;
        line-height: 1.3;
      }
    </style>
  </body>
</html>
