---
// Supports weights 400-900
import '@fontsource-variable/maven-pro';
import '@fontsource/open-sans';
// Supports weights 200-900
import '@fontsource-variable/source-code-pro';
import { Image } from 'astro:assets';
const currentPath = Astro.url.pathname;
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Conor Kelley | {title}</title>
    <!-- <link rel="shortcut icon" type="image/png" href="./public/favicon.png" /> -->
  </head>
  <body>
    <header>
      <h1 class="tagline">conor kelley&nbsp;<span>&#123;web developer&#125;</span></h1>
      <a href="https://github.com/zenDev-2" target="#" aria-label="GitHub" class="github-link"><Image src="/github-55.svg" alt="GitHub" width="55" height="55" /></a>
    </header>
    <section class="content-grid">
    <nav class="sidebar-menu">
      <ul class="menu-items">
        <li><a href="/" class={currentPath === '/' ? 'active' : ''}>~/</a></li>
        <li><a href="/portfolio/" class={currentPath === '/portfolio/' ? 'active' : ''}>/portfolio</a></li>
        <li><a href="/about/" class={currentPath === '/about/' ? 'active' : ''}>/about</a></li>
      </ul>
    </nav>
      <main><slot/></main>
    </section>
  </body>
  <!-- <footer>
    <p>&copy; Conor Kelley 2023 â€¢ Icons by <a target="_blank" href="https://icons8.com">Icons8</a></p>
  </footer> -->
</html>

<style lang="scss" is:global>
  :root {
    --text: #f8f9fc;
    --background: #06070e;
    --primary: #a0b0f8;
    --secondary: #0f1324;
    --accent: #3a61d4;
    // --accent: #3e5be3; (former accent color)

  }

  *, *::before, *::after {
    box-sizing: border-box;
  }

  html {
    font-size: 112.5%; /*18px*/
    width: 100vw;
    overflow-x: hidden;
  } 

  html, body {
    margin: 0;
    padding: 0;
  }

  img {
    max-width: 100%;
    display: block;
  }

  body {
    // font-family: 'Open Sans Variable', sans-serif;
    font-weight: 400;
    line-height: 1.75;
    font-family: 'Maven Pro Variable', sans-serif;
    background-color: var(--background);
    color: var(--text);
    min-height: 100vh;
  }

  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: solid 1px #191919;
    padding: 0.5em 1.5em;
    h1 {
      margin: 0 0 0.5rem 0;
      font-weight: 500;
      span {
        background: linear-gradient(120deg, var(--accent), var(--primary));
        background-clip: text;
        color: transparent;
      }
    }
  }

  .github-link {
    padding: 0 0.5em;
  }

  .rotate {
    transform: rotate(-135deg);
  }

  section.content-grid {
    display: grid;
    grid-template-columns: 20% 80%;
    padding: 0em 1em;
  }

  nav {
    position: sticky;
		top: 1rem;
		align-self: start;
    border-right: solid 1px #191919;
  }

  .menu-items {
    font-family: 'Source Code Pro Variable', sans-serif;
    list-style-type: none;
    font-size: 1.5rem;
    margin-top: 0;
    padding-top: 1rem;
    padding-left: auto;

    li {
      a {
        color: var(--text);
        text-decoration: none;
      }
    }

    li + li {
      margin-top: 1.5rem;
    }
  }

  li a.active {
    color: var(--accent);
  }

  main {
    padding: 1rem 2em;

    h2 {
      margin-top: 0;
    }
  }

  footer {
    p {
      margin-top: 0;
    }
  }
  
  a {
    color: var(--accent);
  }

  // Font Configurations ** //

  p {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

h1, h2, h3, h4, h5 {
  margin: 2rem 0 1.38rem;
  font-family: 'Maven Pro Variable', sans-serif;
  font-weight: 400;
  line-height: 1.3;
}

h1 {
  margin-top: 0;
  font-size: 2.288rem;
}

h2 {
  font-size: 2.074rem;
  color: var(--primary);
  font-weight: 650;
}

h3 {font-size: 1.728rem;}

h4 {
  margin-top: 0.5rem;
  font-size: 1.44rem;
  color: var(--primary);
}

h5 {font-size: 1.2rem;}

small, .text_small {font-size: 0.833rem;}

// ** //
</style>