---
import Layout from "../../layouts/Layout.astro";
import PortfolioSection from "../../components/PortfolioSection.astro";
import Project from "../../components/Project.astro";
import CTSI from "../../components/CTSI.astro";
import Chip from "../../components/Chip.astro";
import ProjectNoVisual from "../../components/ProjectNoVisual.astro";
import ProjectRow from "../../components/ProjectRow.astro";

const heading = "GW Medicine";
const description =
  "UI elements, command-line tools, and other highlighted development projects from my work with the GW MFA and School of Medicine & Health Sciences.";
---

<Layout portfolioIsActive="true" pathName="portfolio/gwmedicine">
  <PortfolioSection
    heading={heading}
    description={description}
    timeline="October 2022 - Present"
    companyAbbr="gw"
  >
    <h3>User Interface Components</h3>
    <ProjectRow>
      <Project
        slot="column-1"
        projectName="CTSI-CN Virtual Organizer"
        projectDescription="An interactive navigational graphic developed for the Clinical and Translational Science Institute (CTSI) at Children's National Hospital."
        projectURL="https://ctsicn.org/virtual-organizer"
      >
        <CTSI slot="project-visual" />
        <Chip slot="chip" abbr="scss" />
        <Chip slot="chip" abbr="js" />
      </Project>
    </ProjectRow>

    <h3>Automation Tools</h3>
    <ProjectRow>
      <ProjectNoVisual
        slot="column-1"
        projectName="Faculty Profile Markup Generator"
        projectDescription="Developed for the redesign effort of the GW School of Medicine department faculty pages, this tool scraped 1,400+ GW School of Medicine faculty profiles and regenerated them with redesigned HTML, significantly speeding up the redesign implementation."
        projectURL="https://github.com/contreau/smhs-faculty-generator"
      >
        <Chip slot="chip" abbr="js" />
        <Chip slot="chip" abbr="cli" />
      </ProjectNoVisual>

      <ProjectNoVisual
        slot="column-2"
        projectName="Faculty Profile URL Patcher"
        projectDescription=" Developed for the migration of the GW School of Medicine faculty directory, this tool updated profile URLs in the markup of 1,400+ faculty members to the new directory domain in just a few seconds. Enabled near-immediate updating of 30+ department websites as soon as the directory launched."
        projectURL="https://github.com/contreau/smhs-profile-patch"
      >
        <Chip slot="chip" abbr="ts" />
        <Chip slot="chip" abbr="cli" />
      </ProjectNoVisual>
    </ProjectRow>
  </PortfolioSection>
</Layout>

<style>
  h3 {
    margin-block: 3rem;
  }

  @media (max-width: 1100px) {
    h3 {
      text-align: center;
    }
  }
</style>
