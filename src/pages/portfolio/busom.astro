---
import Layout from "../../layouts/Layout.astro";
import ProjectNoVisual from "../../components/ProjectNoVisual.astro";
import PortfolioSection from "../../components/PortfolioSection.astro";
import Chip from "../../components/Chip.astro";

const heading = "Boston University School of Medicine";
const description = `I redesigned two websites for the BU School of Medicine, both of which involved implementing new layout markup and CSS styles within the underlying BU WordPress CMS.`;
---

<Layout portfolioIsActive="true">
  <PortfolioSection
    heading={heading}
    description={description}
    timeline="January - August 2022"
    companyAbbr="bu"
  >
    <ProjectNoVisual
      projectName="Department of Pharmacology Website"
      projectDescription="Collaborated with faculty for feature and design needs, wrote extensive new CSS styles, procured and optimized site assets."
      projectURL="https://www.bumc.bu.edu/ppb/"
    >
      <Chip slot="chip" abbr="css" />
      <Chip slot="chip" abbr="wp" />
    </ProjectNoVisual>
    <ProjectNoVisual
      projectName="Office of Financial and Grants Administration Website"
      projectDescription="Wrote new CSS styles, procured assets, photographed staff headshots and other site imagery."
      projectURL="https://www.bumc.bu.edu/ofga/"
    >
      <Chip slot="chip" abbr="css" />
      <Chip slot="chip" abbr="wp" />
    </ProjectNoVisual>
  </PortfolioSection>
</Layout>
