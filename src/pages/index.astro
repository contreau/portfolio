<style lang="scss">
  .grid-container {
    display: grid;
    grid-template-columns: 75% 25%;
    align-items: center;

    section {
      display: flex;
      gap: 0.5rem;
      align-items: center;
      justify-content: flex-start;
      padding: 0 2em;
    }

    section.location,
    section.work,
    section.photography {
      opacity: 0;
      text-align: center;
      max-width: 700px;
      padding-top: 0.3em;
      padding-bottom: 0.3em;
      border-radius: 15px;
      background-color: var(--secondary);
      background-image: linear-gradient(
        to right bottom,
        #0f1324,
        #142041,
        #192953,
        #121f48,
        #111a3d
      );
      background-size: 500%;
      background-position: top left;
      transition: 0.3s;
      animation: slideIn 0.4s 0.9s ease-in forwards;
      &:hover {
        background-position: top right;
      }
      p {
        font-weight: 500;
      }
    }

    section.work {
      animation-delay: 1s;
    }
    section.photography {
      animation-delay: 1.2s;
    }

    @keyframes slideIn {
      0% {
        opacity: 0;
        transform: translateX(-100px);
      }
      100% {
        transform: translateX(0px);
        opacity: 1;
      }
    }

    .tech-stack {
      opacity: 0;
      gap: 0rem;
      padding-top: 1em;
      padding-bottom: 1em;
      flex-direction: column;
      border-radius: 15px;
      background-color: var(--secondary);
      background-image: linear-gradient(
        to right bottom,
        #0f1324,
        #142041,
        #192953,
        #121f48,
        #111a3d
      );
      background-size: 500%;
      background-position: top left;
      transition: 0.3s;
      animation: growIn 0.3s 1.2s ease-in forwards;
      &:hover {
        background-position: top right;
      }
    }
  }

  @keyframes growIn {
    0% {
      opacity: 0;
      transform: scale(0.85);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .grid-item:first-child {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .intro {
    color: var(--primary);
    margin-top: 2.4rem;
    font-size: 1.4rem;
    font-weight: 500;
    text-align: center;
  }

  h2 {
    opacity: 0;
    text-align: center;
    margin-bottom: 0;
    animation: fadeIn 0.3s ease-in forwards;
  }

  .peace-sign {
    animation: fadeIn 0.3s ease-in forwards;
  }

  .biography {
    margin-top: 0.2rem;
    border-radius: 15px;
    text-align: center;
    .heading-image-container {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    p {
      opacity: 0;
      margin-top: 0;
      // font-size: 1.4rem;
      font-size: clamp(1.125rem, 3vw, 1.4rem);
      border-radius: 15px;
      animation: fadeIn 0.3s 0.4s ease-in forwards;
      br {
        margin: 0.1em 0;
      }
      &.cv {
        color: var(--text);
        font-weight: 500;
        padding: 0.1em 0.5em;
        padding-right: 0.2em;
        margin: 2.6rem auto 2.2rem auto;
        max-width: fit-content;
        border-radius: 10px;
        background-color: var(--accent);
        cursor: pointer;
        &:hover {
          filter: drop-shadow(0 0 1.5rem var(--accent));
        }

        a {
          display: flex;
          align-items: center;
          color: var(--text);
          text-decoration: none;
        }

        img {
          display: inline;
        }
      }
    }

    .ashitaka-avatar {
      margin: 0.8rem auto;
      border: solid 3px var(--accent);
      border-radius: 50%;
    }
  }

  h3 {
    color: var(--primary);
    text-align: center;
    font-weight: 500;
  }

  .social-list {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    // margin-top: 4rem;
    img {
      transition: 0.2s all;
      &:hover {
        filter: drop-shadow(0 0 1.5rem var(--accent));
      }
    }
  }

  .prof-pic {
    margin: 0 auto;
  }

  .icon-row {
    min-width: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
  }

  .divider {
    opacity: 0;
    margin: 1.5rem 0;
    font-size: 1.728rem;
    font-weight: 500;
    text-align: center;
    padding: 1.2em 0 0 0;
    animation: fadeIn 0.3s 0.4s ease-in forwards;
    &:first-of-type {
      padding-top: 0;
    }
  }

  .secondrow-label {
    font-size: 1.2rem;
    font-weight: 500;
    margin-top: 0.1rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .social-list-mobile,
  .divider-mobile {
    display: none;
  }

  .mobile-row {
    display: flex;
    gap: 2.5rem;
  }

  @media (max-width: 1380px) {
    .grid-container {
      grid-template-columns: 1fr;
      place-items: center;

      section.tech-stack {
        margin-top: 2.8rem;
        padding-bottom: 1em;
      }
    }
  }

  @media (max-width: 500px) {
    .heading-image-container {
      flex-direction: column;
    }

    .icon-row {
      flex-direction: column;
    }

    .biography p {
      padding: 0;
    }
    .grid-container {
      section {
        flex-direction: column;
        padding-top: 2em;
        padding-bottom: 2em;
      }

      section.location,
      section.work,
      section.photography {
        padding-top: 1em;
        padding-bottom: 0em;
      }
    }
    .tech-stack {
      grid-column: 1;
      margin-top: 2.8rem;
    }
  }

  @media (max-width: 900px) {
    li.homepage {
      display: none;
    }

    .divider-mobile {
      display: block;
    }

    .social-list-mobile {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      margin-bottom: 1rem;
      gap: 0.5rem;
      .github-link {
        margin-top: 0;
      }
    }
  }
</style>
