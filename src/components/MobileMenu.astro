<style lang="scss">
  .mobileMenu--btn {
    opacity: 1;
    // animation: fadeIn 0.5s 3.4s ease-in forwards;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: solid 2px #fff;
    border-radius: 50%;
    min-height: 3rem;
    width: 3rem;
    background: var(--blue);
    transition: 0.4s all;
    &:active {
      cursor: pointer;
    }
  }

  .menuSymbol {
    min-height: 0.1rem;
    width: 50%;
    background: #fff;
    border-radius: 2px;
  }

  .menuSymbol + .menuSymbol {
    margin-top: 0.5em;
  }

  .collapse-symbols {
    animation: fadeOut 0.2s ease-in forwards;
  }

  .add-symbols {
    animation: fadeIn 0.2s ease-in forwards;
  }

  .animate-open {
    animation: symbolOpen 0.2s ease-in forwards;
  }

  // toggled with javascript onclick
  // remove from final code if not using
  // .collapsed {
  //   display: none;
  // }

  nav.mobileMenu {
    margin: 0 auto;
    // margin-top: 3rem;
    max-width: 510px; // first breakpoint
    opacity: 1;
    // animation: fadeIn 0.4s ease-in forwards;
    // border: solid 1px red;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1em;
    .nav-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .page-links__list {
      // border: solid 1px yellow;
      margin: 0;
      padding: 0;
      list-style-type: none;
      width: 100%;
      color: #0099ff;
      text-align: left;

      li {
        margin-top: 1.2rem;
        background-color: var(--mobile-btn);
        padding: 0.2em 0.6em;
        border: solid 1px var(--mobile-btn-border);
        border-radius: 18px;
        box-shadow: 5.5px 5.5px var(--mobile-btn-shadow);
        transition: 0.27s all;
        &:active {
          transform: scale(0.7);
          transition: transform 0.17s;
        }
        // &:hover {
        //   background: #fff;
        //   color: #000;
        // }
      }

      .fa-solid {
        margin-right: 2rem;
      }

      .fa-code {
        margin-right: 1.3rem;
      }

      // .page-links {
      //   font-size: 3rem;
      // }

      .projects-li {
        animation: mobileMenuPop 0.35s 1s ease-in forwards;
      }
      .media-li {
        animation: mobileMenuPop 0.35s 1.2s ease-in forwards;
      }
      .about-li {
        animation: mobileMenuPop 0.35s 1.4s ease-in forwards;
      }

      .listItem {
        opacity: 0;
        font-size: 1.4rem;
      }

      .listItem + .listItem {
        margin-top: 1rem;
      }
    }

    .icons {
      font-size: 3.3rem;
      margin-top: 2rem;

      .icon-row2 {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 0.5em;
      }

      .fa-brands,
      .fa-envelope {
        opacity: 0;
        color: #fff;
        background: var(--mobile-btn);
        box-shadow: 3px 3px var(--mobile-btn-shadow);
        border: solid 1px var(--mobile-btn-border);
        border-radius: 50%;
        font-size: 2.5rem;
        padding: 0.22em 0.3em;
        transition: 0.27s all;
        &:active {
          transform: scale(0.45);
          transition: transform 0.17s;
        }
      }

      .fa-envelope {
        animation: mobileMenuPop 0.35s 1.6s ease-in forwards;
      }

      .fa-github-alt {
        animation: mobileMenuPop 0.35s 1.8s ease-in forwards;
      }

      .fa-linkedin-in {
        animation: mobileMenuPop 0.35s 2s ease-in forwards;
      }
    }

    a {
      text-decoration: none;
      color: #fff;
      transition: 0.4s all;
      // &:hover,
      // &:active {
      //   color: #0047b0;
      // }
    }
  }
</style>
