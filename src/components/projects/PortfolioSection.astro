---
const { heading, timeline, companyAbbr } = Astro.props;
interface Props {
  heading: string;
  companyAbbr?: string;
  timeline?: string;
}

let timelineClasses = ["timeline"];
if (companyAbbr) {
  timelineClasses.push(companyAbbr);
}
---

<section>
  <div class="heading-timeline">
    <h2>{heading}</h2>
    <span class:list={timelineClasses}>{timeline}</span>
  </div>
  <slot name="description" />
  <slot />
</section>

<style>
  .heading-timeline {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .timeline {
    margin-top: 0.3rem;
    display: inline-block;
    align-self: flex-start;
    font-size: 0.75rem;
    font-weight: 550;
    padding: 0.1em 1em;
    color: #ffffff;
    border-radius: 30px;
  }

  .timeline:empty {
    display: none;
  }

  .timeline.bu {
    background-color: #ce0808;
  }
  .timeline.gw {
    background-color: #033c5a;
  }

  p.description {
    margin-block: 1.5rem;
    max-width: 80%;
  }

  @media (max-width: 1100px) {
    .heading-timeline {
      flex-direction: column;
      text-align: center;
      align-items: center;
      gap: 1rem;
    }

    .timeline {
      align-self: center;
    }

    h2 {
      text-wrap: balance;
    }

    p.description {
      max-width: 100%;
      text-align: center;
    }
  }
</style>
