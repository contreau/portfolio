---
import Image from "astro/components/Image.astro";
const { name, url, description, jobtype, tools } = Astro.props;
---

<li>
  <div class="container">
    <h3>
      <a href={url} target="_blank">{name}</a>
    </h3>
    <p class="description">
      {description}
    </p>
    <div class="tags">
      <div class="job-type">
        <Image
          alt="briefcase"
          src="/briefcase.svg"
          width="26.5"
          height="26.5"
        />
        <p>{jobtype}</p>
      </div>
      <div class="tools">
        <Image alt="gear" src="/gear.svg" width="26.5" height="26.5" />
        <p>{tools}</p>
      </div>
    </div>
  </div>
</li>

<style lang="scss" scoped>
  li {
    background-color: #d7d4d4;
    padding: 1em;
    list-style-type: none;
    border-radius: 10px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 2px 0px;
    max-width: fit-content;
  }

  p.description {
    font-style: italic;
    font-size: 1.05rem;
    color: #5a5959;
  }

  div.tags {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  div.job-type,
  div.tools {
    max-width: fit-content;
    padding: 0.1em 0.4em;
    border-radius: 5px;
    background-color: #e1e1e1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    p {
      color: #535353;
      margin: 0;
      font-weight: 550;
      font-size: 0.95rem;
    }
  }

  h3 {
    color: #3a3a3a;
    margin-top: 0;
    a {
      text-decoration: underline;
    }
  }
</style>
