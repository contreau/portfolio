<style lang="scss">
  // h2 {
  //   opacity: 0;
  //   animation: fadeIn 0.3s ease-in forwards;
  // }
  // h3:first-of-type {
  //   opacity: 0;
  //   animation: fadeIn 0.3s 0.4s ease-in forwards;
  // }

  .portfolio-grid {
    // opacity: 0;
    // animation: fadeIn 0.3s 0.68s ease-in forwards;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;

    .grid-item {
      text-align: center;
      border-radius: 15px;
      padding: 1em;
      background-color: #ffffff69;
      transition: 0.4s all;
      &:hover {
        background-color: #ffffffc8;
      }

      p {
        max-width: 90%;
        margin-left: auto;
        margin-right: auto;
      }

      .project-links {
        max-width: fit-content;
        margin: 0 auto;
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        gap: 1rem;
        a {
          font-size: 1.1rem;
          font-weight: 600;
          text-decoration: none;
          padding: 0.1em 0.7em;
          border-radius: 30px;
          background-color: var(--accent);
          color: var(--text);
          transition: 0.3s all;
          &:hover {
            background-color: #1b3789;
          }
        }
      }

      .icon-row {
        max-width: fit-content;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        border-radius: 15px;
        padding: 0.4em 1.2em;
      }

      .main-icon {
        margin: 0 auto;
        animation: rotate 10s linear infinite;
      }

      @keyframes rotate {
        100% {
          transform: rotate(360deg);
        }
      }
    }
  }

  .creative-works {
    margin-bottom: 2.5rem;
  }

  .full-span {
    grid-column: span 2;
  }

  h3 {
    text-align: center;
    font-weight: 500;
  }

  h4 {
    font-weight: 550;
    display: inline-block;
  }

  .lt,
  .gt {
    font-size: 1.5rem;
    font-weight: 500;
    --tag-color: #4c7cc8;
    color: var(--tag-color);
  }

  @media (max-width: 900px) {
    .portfolio-grid {
      display: block;
    }

    .grid-item + .grid-item {
      margin-top: 2rem;
    }

    .creative-works:last-child {
      margin-bottom: 2rem;
    }

    .content-grid {
      margin-bottom: 15rem;
    }
  }

  @media (max-width: 375px) {
    .project-links {
      flex-direction: column;
    }
  }
</style>
