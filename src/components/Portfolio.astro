import { Image } from "astro:assets";
import ISS from "./ISS.astro";
import Darqnet from "./Darqnet.astro";
import Particles from "./Particles.astro";
import Koi from "./Koi.astro";
import Firework from "./Firework.astro";
import Snek from "./Snek.astro";
---

<h3>
  <span style="color: #4c7cc8">&#123;</span> Web Apps <span
    style="color: #4c7cc8">&#125;</span
  >
</h3>

<section class="portfolio-grid">
  <div class="grid-item">
    <span class="lt">&lt;&nbsp;</span><h4>CiteClinic</h4><span class="gt"
      >&nbsp;/&gt;</span
    >
    <div style="min-height: 150px; display: grid; place-items: center;">
      <Image
        src="/citeclinic-65.svg"
        alt="CiteClinic"
        width="65"
        height="65"
        class="main-icon"
      />
    </div>
    <p>Generate styled components of journal article citations.</p>
    <div class="project-links">
      <a href="https://citeclinic.app/" target="#">Live Project</a>
      <a href="https://github.com/contreau/CiteClinic" target="#">Source Code</a
      >
    </div>
    <div class="icon-row">
      <div class="tooltip">
        <Image src="/svelte-50.svg" alt="Svelte" width="50" height="50" />
        <div class="top wide-tooltip">
          <span>SvelteKit</span>
          <i></i>
        </div>
      </div>
      <div class="tooltip">
        <Image
          src="/typescript-50.svg"
          alt="TypeScript"
          width="50"
          height="50"
        />
        <div class="top">
          <span>TypeScript</span>
          <i></i>
        </div>
      </div>
      <div class="tooltip">
        <Image src="/sass-50.svg" alt="Sass" width="50" height="50" />
        <div class="top wide-tooltip">
          <span>Sass/SCSS</span>
          <i></i>
        </div>
      </div>
    </div>
  </div>
  <div class="grid-item" style="z-index: 0;">
    <span class="lt">&lt;&nbsp;</span>
    <h4>Snek</h4><span class="gt">&nbsp;/&gt;</span>
    <Snek />
    <p>An aesthetically pleasing snake game with three modes.</p>
    <div class="project-links">
      <a href="https://snekgame.app/" target="#">Live Project</a>
      <a href="https://github.com/contreau/snek" target="#">Source Code</a>
    </div>
    <div class="icon-row">
      <div class="tooltip">
        <Image src="/svelte-50.svg" alt="Svelte" width="50" height="50" />
        <div class="top">
          <span>Svelte</span>
          <i></i>
        </div>
      </div>
      <div class="tooltip">
        <Image
          src="/typescript-50.svg"
          alt="TypeScript"
          width="50"
          height="50"
        />
        <div class="top">
          <span>TypeScript</span>
          <i></i>
        </div>
      </div>
      <div class="tooltip">
        <Image src="/sass-50.svg" alt="Sass" width="50" height="50" />
        <div class="top wide-tooltip">
          <span>Sass/SCSS</span>
          <i></i>
        </div>
      </div>
    </div>
  </div>
  <div class="grid-item">
    <span class="lt">&lt;&nbsp;</span>
    <h4>ISS Live Tracker</h4><span class="gt">&nbsp;/&gt;</span>
    <ISS />
    <p>An interactive tracker of the International Space Station.</p>
    <div class="project-links">
      <a href="https://live-tracker-iss.netlify.app/" target="#">Live Project</a
      >
      <a href="https://github.com/contreau/ISS" target="#">Source Code</a>
    </div>
    <div class="icon-row">
      <div class="tooltip">
        <Image
          src="/javascript-50.svg"
          alt="JavaScript"
          width="50"
          height="50"
        />
        <div class="top">
          <span>JavaScript</span>
          <i></i>
        </div>
      </div>
      <div class="tooltip">
        <Image src="/css-50.svg" alt="CSS3" width="50" height="50" />
        <div class="top">
          <span>CSS3</span>
          <i></i>
        </div>
      </div>
    </div>
  </div>

  <div class="grid-item">
    <span class="lt">&lt;&nbsp;</span>
    <h4>Darqnet</h4><span class="gt">&nbsp;/&gt;</span>
    <Darqnet />
    <p>Custom UI developed for a cryptographic 'ceremony' (Web3)</p>
    <div class="project-links">
      <a href="https://github.com/darqnet/darqnet-ceremony" target="#"
        >Source Code</a
      >
    </div>
    <div class="icon-row">
      <div class="tooltip">
        <Image src="/vue-50.svg" alt="Vue" width="50" height="50" />
        <div class="top tooltip">
          <span>Vue</span>
          <i></i>
        </div>
      </div>
      <div class="tooltip">
        <Image
          src="/javascript-50.svg"
          alt="JavaScript"
          width="50"
          height="50"
        />
        <div class="top">
          <span>JavaScript</span>
          <i></i>
